<div class="container">
  <div class="row">
    <div class="col">
        <p>
          <strong>Name:</strong>
          <%= @restaurant.name %>
        </p>

        <p>
          <strong>Address:</strong>
          <%= @restaurant.address %>
        </p>

        <p>
          <strong>Phone number:</strong>
          <%= @restaurant.phone_number %>
        </p>

        <p>
          <strong>Category:</strong>
          <%= @restaurant.category %>
        </p>

        <ul class="list-group">
          <% @restaurant.reviews.each do |review| %>
            <li class="list-group-item">
                  <%= review.content %>
                  <%= link_to "Remove",
                              review_path(review),
                              method: :delete,
                              data: { confirm: "Are you sure?" } %>
                </li>
          <% end %>
        </ul>

        <%= link_to 'Edit', edit_restaurant_path(@restaurant), class: "btn btn-light" %> |
        <%= link_to 'Back', restaurants_path, class: "btn btn-success" %> |
        <%= link_to "Create review", new_restaurant_review_path(@restaurant), class: "btn btn-warning" %>
      </div>
  </div>
</div>


